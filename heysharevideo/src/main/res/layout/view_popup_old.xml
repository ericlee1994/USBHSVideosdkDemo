<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/person_lay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/bg_popview">
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popup_joined"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/white_color"
                />
            <GridView
                android:id="@+id/gv_view_meeting"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="8"
                android:padding="3dp"
                android:verticalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="5"
                >
            </GridView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_color"/>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popup_refuse"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/white_color"
                />
            <GridView
                android:id="@+id/gv_view_no"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="8"
                android:padding="3dp"
                android:verticalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="5">

            </GridView>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_color"/>
    <LinearLayout
        android:id="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_dropdown"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@drawable/btn_arrow_down">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:background="@drawable/bg_popview">
            <RelativeLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="5dp"
                android:id="@+id/videotape_linear"
                android:visibility="invisible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:id="@+id/btn_videotape"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:src="@drawable/videotape"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/videotape_point"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:src="@drawable/videotape_dian"/>
                        <TextView
                            android:id="@+id/videotape_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="00:00:00"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_color" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_add_person"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_add_person_selector" />
                <ImageView
                    android:id="@+id/btn_show_person"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_show_person_selector"/>
                <ImageView
                    android:id="@+id/btn_mic"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_ban_mic_selector" />
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_camera_selector" />
                <ImageView
                    android:id="@+id/btn_voice"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_speech_selector" />

                <ImageView
                    android:id="@+id/btn_turn"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_switch_camera_selector" />
                <ImageView
                    android:id="@+id/btn_display_mode"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_mode_selector" />

                <ImageView
                    android:id="@+id/btn_hangup"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_gone"/>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
