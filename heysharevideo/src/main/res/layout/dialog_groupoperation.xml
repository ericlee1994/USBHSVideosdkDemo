<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_kuang"
    android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/txt_tital_dialog_groupoperation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/black_color" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75" />
        <EditText
            android:id="@+id/edit_dialog_groupoperation"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:singleLine="true"
            android:padding= "5dp"
            android:background="@drawable/edit_kuang"
            android:textColor="@color/black_color"/>
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/txt_exit_dialog_groupoperation"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/btn_goset"
            android:gravity="center"
            android:text="@string/tital_cancel"
            android:textColor="@color/permission_btn_color" />

        <LinearLayout
            android:id="@+id/space_dialog"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txt_goset_dialog_groupoperation"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/btn_exit"
            android:gravity="center"
            android:text="@string/tital_ok"
            android:textColor="@color/permission_btn_color" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2" />

</LinearLayout>
