<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/catalog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_zimu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addresslist_catalog"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:text="A"
            android:textColor="@color/white_color" />"
    </LinearLayout>
     <View
            android:id="@+id/container_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_color_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       <LinearLayout
            android:id="@+id/addresslist_circular_layout"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:gravity="center" 
            android:layout_weight="0.8" >

            <ImageView
                android:id="@+id/addresslist_childselect"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_status_normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/addresslist_png"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:scaleType="centerInside"
            android:src="@drawable/child_user_normal" />

        <TextView
            android:id="@+id/addresslist_name"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="3.8"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white_color" />

        <TextView
            android:id="@+id/addresslist_department"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/addresslist_status"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>