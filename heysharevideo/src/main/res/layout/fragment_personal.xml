<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:clickable="true"
    android:background="@drawable/bg_personal">
    <Space
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1.5"/>
    <TextView 
        android:id="@+id/personal_call"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.6"
        android:gravity="center"
        android:textColor="@color/white_color"/>
    <Space 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.4"/>
    <ImageView 
        android:id="@+id/personalname_png"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="2"
        android:src="@drawable/inviter"
        android:scaleType="centerInside"/>
    <Space 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.2"/>
    <TextView 
        android:id="@+id/personal_meeting_name"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:layout_weight="0.7"/>
    <Space 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.5"/>
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <Space 
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:layout_weight="3"/>
            <Button 
                android:id="@+id/personal_meeting_end"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:background="@drawable/btn_refuse_nor"/>
            <Space 
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:layout_weight="3"/>
        </LinearLayout>
    
    <Space 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="3.1"/>
</LinearLayout>
