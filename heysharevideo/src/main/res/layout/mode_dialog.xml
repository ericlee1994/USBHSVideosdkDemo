<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mode_bg"
    >
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1.4 "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6"
        android:orientation="horizontal">
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_default_display"
            android:layout_gravity="center"
            android:background="@drawable/mode_bg_onefive"
            />
    </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_quarter_display"
            android:background="@drawable/mode_bg_quarter"/>

    </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:id="@+id/layout_pip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_pip_display"
            android:background="@drawable/mode_bg_pip"/>
    </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.8"/>
</LinearLayout>
