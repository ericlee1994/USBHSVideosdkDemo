<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_groupcolor"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/group_square_layout"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:focusable="false"
        android:layout_weight="0.8" >

        <ImageView
            android:id="@+id/image_groupselect"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/select_no" />

    </LinearLayout>

    <ImageView
        android:id="@+id/group_png"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginLeft="3dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/addresslist_groupid"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/black_color" />

    <LinearLayout
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center" >
        <ImageView
            android:id="@+id/addresslist_biaozhi"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/jiantou" />
    </LinearLayout>
</LinearLayout>
