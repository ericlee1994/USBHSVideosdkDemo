<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="8">
    <LinearLayout
        android:id="@+id/person_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/bg_popview">
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popup_joined"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/white_color"
                />
            <GridView
                android:id="@+id/gv_view_meeting"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="8"
                android:padding="3dp"
                android:verticalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="5"
                >
            </GridView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_color"/>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popup_refuse"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/white_color"
                />
            <GridView
                android:id="@+id/gv_view_no"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="8"
                android:padding="3dp"
                android:verticalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="5">

            </GridView>
        </LinearLayout>
    </LinearLayout>
        <!-- 会控 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ctrl_lay"
            android:orientation="horizontal"
            android:background="@drawable/bg_popview">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/white_color"
                    android:text="参会人员"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:id="@+id/ctrl_title_name"
                        android:text="人员"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_mic"
                        android:text="话筒"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_speaker"
                        android:text="扩声"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_switch"
                        android:text="摄像头"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_video"
                        android:text="视频流"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                       />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_exit"
                        android:text="关闭"
                        android:background="@drawable/ctrl_title"
                        android:textColor="@color/white_color"
                        android:gravity="center"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="8"
                    android:id="@+id/ctrl_join_lv"
                    android:divider="@color/gray_color"
                    android:listSelector="@android:color/transparent"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_color"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/white_color"
                    android:text="未入会人员"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:id="@+id/ctrl_title_unjoin"
                        android:text="人员"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        android:background="@drawable/ctrl_title"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_invite"
                        android:text="邀请"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        android:background="@drawable/ctrl_title"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_msg"
                        android:text="短信"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        android:background="@drawable/ctrl_title"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:id="@+id/ctrl_title_delete"
                        android:text="删除"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        android:background="@drawable/ctrl_title"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="8"
                    android:id="@+id/ctrl_unjoin_lv"
                    android:divider="@color/gray_color"
                    android:listSelector="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_color"/>
    <LinearLayout
        android:id="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_dropdown"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@drawable/btn_arrow_down">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:background="@drawable/bg_popview">
            <Space
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="5dp"
                android:id="@+id/videotape_linear"
                android:visibility="invisible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:id="@+id/btn_videotape"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:src="@drawable/videotape"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/videotape_point"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:src="@drawable/videotape_dian"/>
                        <TextView
                            android:id="@+id/videotape_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white_color"
                            android:text="00:00:00"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_color" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_add_person"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_add_person_selector" />
                <ImageView
                    android:id="@+id/btn_show_person"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_show_person_selector"/>
                <ImageView
                    android:id="@+id/btn_display_mode"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_mode_selector" />
                <ImageView
                    android:id="@+id/btn_sharepic"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_sharepic_selector" />
                <ImageView
                    android:id="@+id/btn_pizhu"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_pizhu_selector" />
                <ImageView
                    android:id="@+id/btn_ctrl"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_ctrl_selector" />
                <ImageView
                    android:id="@+id/btn_hangup"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_gone"/>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
